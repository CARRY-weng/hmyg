
<searchInput></searchInput>

<navigator 
class="goods_wrap" 
url="" 
open-type="navigate"
wx:for='{{goods}}'
wx:for-item='item'
wx:for-index='index'
wx:key='goods_id'>

    <!-- 左边图片 -->
    <view class="goods_img" >
        <image 
        class="goods_small_logo" 
        src="{{item.goods_small_logo}}" 
        mode="widthFix"/>
    </view>
    <!-- 右边商品信息 -->
    <view class="goods_info">
        <!-- 商品图片 -->
        <view class="goods_name">
            {{item.goods_name}}
        </view>
        <!-- 商品信息 -->
        <view class="goods_price">
            ￥{{item.goods_price}}
        </view>
          
          
    </view>
      
      
</navigator>
  