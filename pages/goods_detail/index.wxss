swiper {
  height: 50vw;
  text-align: center;
}
swiper .goods_pics {
  width: 50%;
}
.goods_price {
  color: var(--themeColor);
  padding: 10rpx;
  font-size: 28rpx;
}
.goods_name_warp {
  display: flex;
  color: #8d8c88;
}
.goods_name_warp .goods_name {
  flex: 5;
  padding: 5rpx 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
}
.goods_name_warp .start {
  flex: 1;
  border-left: 1px solid #000;
  font-size: 26rpx;
  text-align: center;
}
.picword {
  padding-bottom: 110rpx;
}
.picword .picword_title {
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.btm_tools {
  border-top: 1rpx solid #ccc;
  width: 100%;
  font-size: 24rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: white;
  display: flex;
  height: 100rpx;
}
.btm_tools .tool_item {
  flex: 1;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.btm_tools .tool_item button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tools .tool_item:nth-last-child(-n+2) {
  flex: 2;
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  background: #ffa500;
}
.btm_tools .tool_item:last-child {
  background: #eb4450;
}
