
<view>
    <!-- 搜索 -->
    <view class='searchInput_warp'>
        <searchInput></searchInput>
    </view>
    <!-- 内容 -->
    <view class='warp'>
        <!-- 左边导航 -->
        <view class="left">
            <view 
            class="leftItem {{catIndex===index1? 'active' : ''}}" 
            wx:for='{{catList}}' 
            wx:key='cat_id' 
            wx:for-item='item1'
            wx:for-index='index1'
            bindtap="handletap"
            data-index='{{index1}}'>
                {{item1}} 
            </view>
              
        </view>
        <!-- 右边内容 -->
        <view class="right">
            <!-- 右边每一个children -->
            <view 
            class="rightItem" 
            wx:for='{{chilireList}}' 
            wx:for-item='item2'
            wx:for-index='index2'
            wx:key='cat_id'>
                <!-- 标题 -->
                <view class="itemTitle">
                    / {{item2.cat_name}} /
                </view>
                <!-- 孩子的孩子 -->
                <view class='itemContent'> 
                    <view 
                    class="producyItem" 
                    wx:for='{{item2.children}}'
                    wx:for-item='item3'
                    wx:for-index='index3'
                    wx:key="cat_id">
                        <image 
                        class="childrenImg" 
                        src="{{item3.cat_icon}}" 
                        mode="widthFix" 
                        />
                        <view class="childrenName">
                            {{item3.cat_name}}
                        </view>
                    </view>
                </view>
                  
                  
                  
            </view>
              
        </view>
    </view>
      
</view>
